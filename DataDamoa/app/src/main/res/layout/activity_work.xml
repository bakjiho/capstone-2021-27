<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="300dp">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/work_sample_1"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />
                <ImageView
                    android:id="@+id/work_sample_2"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />
                <ImageView
                    android:id="@+id/work_sample_3"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />
                <ImageView
                    android:id="@+id/work_sample_4"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />
                <ImageView
                    android:id="@+id/work_sample_5"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/boardquantity"
                    android:fontFamily="@font/notosans"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="#84bd80"
                    android:text="[quantity]"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/boardtitle"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/notosans"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:text="제목 : "
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="189dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="76dp"
                        android:layout_height="30dp"
                        android:background="@drawable/edge"
                        android:backgroundTint="#acdeaa"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="상세 설명"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/boardcontent"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/notosans"
                        android:layout_height="135dp"
                        android:background="@drawable/edge"
                        android:padding="10dp"
                        android:text="body"
                        android:textColor="@color/black" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/boardprice"
                        android:layout_width="246dp"
                        android:layout_height="39dp"
                        android:gravity="right"
                        android:paddingLeft="3dp"
                        android:text="pirce"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="31dp"
                        android:layout_height="33dp"
                        android:text=" 원 "
                        android:textColor="#84bd80"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\t / "
                        android:textColor="#84bd80"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="23dp"
                        android:layout_height="31dp"
                        android:text=" 개 "
                        android:textColor="#84bd80"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edge"
                    android:backgroundTint="#acdeaa"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Q &amp; A"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edge"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/work_question"
                            android:textSize="14dp"
                            android:layout_margin="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="질문을 입력해 주세요."
                            android:text="" />

                        <Button
                            android:id="@+id/work_question_submit"
                            android:layout_width="wrap_content"
                            android:textSize="12dp"
                            android:layout_marginVertical="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content"
                            android:text="등록" />
                    </LinearLayout>

                    <com.example.datadamoa.qaListView
                        android:id="@+id/qa_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>